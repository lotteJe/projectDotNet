@model ChangePasswordViewModel

<h2>Wachtwoord wijzigen</h2>
<hr />

@Html.ValidationMessage("oldPass", new { @style = "color:#a94442; font-weight: bold" })
<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal col-md-8 col-md-offset-2">
   <div class="form-group">
        <label asp-for="OldPassword" class="col-md-4 control-label ww">Huidig wachtwoord</label>
        <div class="col-md-6">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-4 control-label ww">Nieuw wachtwoord</label>
        <div class="col-md-6">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-4 control-label ww">Bevestig wachtwoord</label>
        <div class="col-md-6">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10" id="aanmelden">
            <a asp-controller="Account" asp-action="Edit" class="btn btn-default knop" >Annuleren</a>
            <button type="submit" class="btn btn-default knop" id="changed">Opslaan</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
