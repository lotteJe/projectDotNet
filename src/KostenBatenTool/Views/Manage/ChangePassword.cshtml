@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Wachtwoord wijzigen";
}
@{
    Layout = "~/Views/Shared/CustomLayout.cshtml";
}



<div class="jumbotron col-md-4 col-md-offset-1 box box-left" id="login">
    <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal gegevens">
        <h2 class="tabWw">Wachtwoord wijzigen</h2>
       
       <div class="form-group">
            <label asp-for="OldPassword" class="col-md-4 control-label ww">Oud wachtwoord</label>
            <div class="col-md-8">
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="col-md-4 control-label ww">Nieuw wachtwoord</label>
            <div class="col-md-8">
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-md-4 control-label ww">Bevestig wachtwoord</label>
            <div class="col-md-8">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12" id="aanmelden">
                <button type="submit" class="btn btn-default knop">Verzenden</button>
            </div>
        </div>
    </form>
</div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
