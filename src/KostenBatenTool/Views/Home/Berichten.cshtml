@model IList<KostenBatenTool.Models.Domain.Bericht>
@{
    ViewData["Title"] = "Berichten";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="container-fluid">

    @foreach (var item in Model)
    {
        <div class="bericht">
            <div class="row">
                <p class="col-md-6 col-sm-6 col-xs-6">@item.Onderwerp</p>
                <p class="col-md-offset-10 col-sm-offset-9 col-xs-offset-9">@item.AanmaakDatum.Day/@item.AanmaakDatum.Month/@item.AanmaakDatum.Year @item.AanmaakDatum.Hour:@item.AanmaakDatum.Minute</p>
            </div>
            <p>@item.Tekst</p>
        </div>
    }
</div>