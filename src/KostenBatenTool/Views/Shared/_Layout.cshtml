<!DOCTYPE html>
<html class="dash">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KostenBatenTool</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    </environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body >
<div class="wrap">
  <nav class="nav-bar"  role="navigation">
        <div id="top-menu" class="container-fluid ">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/kairosLogo.png" alt="logo" id="logo"/></a>
            <ul class="nav navbar-nav">
                <li class="nav-header">
                <li class="dropdown movable">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span>Lotte Jespers</span> <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a asp-area="" asp-controller="Account" asp-action="Index"><span class="fa fa-user"></span> Mijn profiel</a></li>
                        <li class="divider"></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="LogOff"><span class="fa fa-power-off"></span> Uitloggen</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <aside id="side-menu" class="aside" role="navigation" data-navigation='true'>
        <ul class="nav nav-list accordion">
            <li class="nav-header"><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home fa-3x"></i></a></li>
            <li class="nav-header"><a asp-area="" asp-controller="Analyse" asp-action="Nieuw"><i class="fa fa-balance-scale fa-2x"></i></a></li>
            <li class="nav-header"><a asp-area="" asp-controller="Analyse" asp-action="Index"><i class="fa fa-archive fa-2x"></i></a></li>
        </ul>
    </aside>
</div>
       <div class="container body-content">
      @RenderBody()
       
           <span><a asp-area="" asp-controller="Home" asp-action="Contact"><i class="fa fa-envelope-o fa-2x" id="contact" aria-hidden="true"></i></a></span>
           <!--   <footer>
            <p>&copy; 2017 - KostenBatenTool</p>
        </footer>-->
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://use.fontawesome.com/f9fbd9e00a.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

        <script src="https://use.fontawesome.com/f9fbd9e00a.js"></script>    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
