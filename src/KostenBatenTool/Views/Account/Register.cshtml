@model RegisterViewModel
@{
    Layout = "~/Views/Shared/CustomLayout.cshtml";
}
<div id="register" class="jumbotron col-md-4 col-md-offset-1 animated fadeInDown">
    <div class="tabs">
        <a asp-area="" asp-controller="Account" asp-action="Login" class="tab btn-default col-md-6">AANMELDEN</a>
        <a asp-area="" asp-controller="Account" asp-action="Register" class="tab btn-default col-md-6 active" style="pointer-events: none">REGISTREREN</a>
    </div>
    <div class="container">
        <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
      <div class="row">
                <div class="col-md-6">
                    <label for="naam" class="control-label">Naam</label>
                    <input asp-for="Naam" id="naam" type="text" class="form-control" name="naam" >
                    <span asp-validation-for="Naam" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label for="voornaam" class="control-label">Voornaam</label>
                    <input asp-for="Voornaam" id="voornaam" type="text" class="form-control" name="voornaam" >
                    <span asp-validation-for="Voornaam" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label for="email" class="control-label">Email</label>
                <input asp-for="Email" id="email" type="text" class="form-control" name="email" >
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label for="naamOrganisatie" class="control-label">Naam organisatie</label>
                <input asp-for="NaamOrganisatie" id="naamOrganisatie" type="text" class="form-control" name="naamOrganisatie" >
                <span asp-validation-for="NaamOrganisatie" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <label for="Straat" class="control-label">Straat</label>
                    <input asp-for="Straat" id="Straat" type="text" class="form-control" name="Straat" >
                    <span asp-validation-for="Straat" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="Huisnummer" class="control-label">Huisnummer</label>
                    <input asp-for="Huisnummer" id="Huisnummer" type="text" class="form-control" name="Huisnummer" >
                    <span asp-validation-for="Huisnummer" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="Postcode" class="control-label">Postcode</label>
                    <input asp-for="Postcode" id="Postcode" type="text" class="form-control" name="Postcode" >
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <div class="col-md-8">
                    <label for="Gemeente" class="control-label">Gemeente</label>
                    <input asp-for="Gemeente" id="Gemeente" type="text" class="form-control" name="Gemeente" >
                    <span asp-validation-for="Gemeente" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-9">
                    <button type="submit" class="btn btn-default knop">Registreer</button>
                </div>
            </div>
        </form>
    </div>
</div>
