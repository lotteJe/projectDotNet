@model EditViewModel
@{
    ViewData["Title"] = "Mijn profiel";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="container-fluid col-md-8 col-md-offset-2">
    <form asp-controller="Account" asp-action="Edit" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" id="address">
        <div class="row">
            <div class="col-md-6">
                <label for="naam" class="control-label">Naam</label>
                <input asp-for="Naam" id="naam" type="text" class="form-control" name="naam">
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="voornaam" class="control-label">Voornaam</label>
                <input asp-for="Voornaam" id="voornaam" type="text" class="form-control" name="voornaam">
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <label for="email" class="control-label">Email</label>
            <input asp-for="Email" id="email" type="text" class="form-control" name="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label for="naamOrganisatie" class="control-label">Naam organisatie</label>
            <input asp-for="NaamOrganisatie" id="naamOrganisatie" type="text" class="form-control" name="naamOrganisatie">
            <span asp-validation-for="NaamOrganisatie" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-8">
                <label class="control-label">Straat</label>
                <input asp-for="Straat" id="autocomplete" type="text" class="form-control" name="Straat">
                <span asp-validation-for="Straat" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label class="control-label">Huisnummer</label>
                <input asp-for="Huisnummer" id="street_number" type="text" class="form-control" name="Huisnummer">
                <span asp-validation-for="Huisnummer" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label class="control-label">Postcode</label>
                <input asp-for="Postcode" id="postal_code" type="text" class="form-control" name="Postcode">
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <label class="control-label">Gemeente</label>
                <input asp-for="Gemeente" id="locality" type="text" class="form-control" name="Gemeente">
                <span asp-validation-for="Gemeente" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12" id="aanmelden">
                <a id="show-change">wachtwoord wijzigen</a>
                <button type="submit" class="btn btn-default knop P">Opslaan</button>
            </div>
        </div>
    </form>
    <div id="changePartial" class="row">
        <div class="col-md-12 ">
            @Html.Partial("_changePasswordPartial")
        </div>
    </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBxyKtliOFsiE46psfqY-Z6Tf0ZWAEqlkc&libraries=places&callback=initAutocomplete" async defer></script>
