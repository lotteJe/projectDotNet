@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{ 
    Layout = "~/Views/Shared/CustomLayout.cshtml";
}

                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <hr />

                    <div class="input-group col-md-offset-1" style="padding-bottom: 8px">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input asp-for="Email" id="email" type="text" class="form-control" name="email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group col-md-offset-1" style="padding-bottom: 8px">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="Password" id="password" type="password" class="form-control" name="password" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-8 col-md-4">
                            <button type="submit" class="btn btn-default">Aanmelden</button>
                        </div>
                    </div>
                    <p>
                        <a asp-action="ForgotPassword">Wachtwoord vergeten?</a>
                    </p>
                </form>
        
        
    

    
