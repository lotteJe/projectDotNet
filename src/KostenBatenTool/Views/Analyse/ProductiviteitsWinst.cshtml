@model KostenBatenTool.Models.AnalyseViewModels.EenDecimalViewModel
@{
    ViewData["Title"] = "7. Productiviteitswinst";
}
<div class="row">
    <h1 class="col-md-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("OmzetverliesBesparing", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { id = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("OverurenBesparing", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />
<h2>Hoeveel extra productiviteit denkt u te kunnen maken door inzet van mensen met een grote afstand tot de arbeidsmarkt?</h2>
<form asp-controller="Analyse" asp-action="ProductiviteitsWinst" method="post" class="form-horizontal">
    <input type="hidden" asp-for="AnalyseId" />
    <div class="row">
        <label asp-for="Jaarbedrag" class="col-md-2 control-label ww">Jaarbedrag</label>
        <div class="col-md-3">
            <input asp-for="Jaarbedrag" class="form-control" type="number" />
            <span asp-validation-for="Jaarbedrag" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5" id="aanmelden">
            <a asp-controller="Analyse" asp-action="Overzicht" asp-route-analyseId="@Model.AnalyseId" class="btn btn-default knop">Annuleren</a>
            <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
        </div>
    </div>
</form>
