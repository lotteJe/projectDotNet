@model KostenBatenTool.Models.AnalyseViewModels.EenDecimalViewModel
@{
    ViewData["Title"] = "7. Productiviteitswinst";
}
<div class="row">
    <h1 class="col-md-7 col-sm-7 col-xs-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("OmzetverliesBesparing", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { analyseId = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("OverurenBesparing", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />
<h2>Hoeveel extra productiviteit denkt u te kunnen maken door inzet van mensen met een grote afstand tot de arbeidsmarkt?</h2>
<div class="col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
    <form asp-controller="Analyse" asp-action="ProductiviteitsWinst" method="post" class="form-horizontal">
        <input type="hidden" asp-for="AnalyseId" />
        <div class="row">
            <label asp-for="Jaarbedrag" class=" control-label ww">Jaarbedrag</label>
            <div class="">
                <input asp-for="Jaarbedrag" class="form-control" type="text" autofocus/>
                <span asp-validation-for="Jaarbedrag" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="" id="aanmelden">
                <a asp-controller="Analyse" asp-action="Overzicht" asp-route-analyseId="@Model.AnalyseId" class="btn btn-default knop">Annuleren</a>
                <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
            </div>
        </div>
    </form>
</div>