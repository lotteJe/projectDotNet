
@model KostenBatenTool.Models.AnalyseViewModels.TypeBedragViewModel
@{
    ViewData["Title"] = "3. Extra kosten werkkleding e.a. personeelskosten";
}
<div class="row">
    <h1 class="col-md-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("VoorbereidingsKost", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { id = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("AanpassingsKost", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />

<div class="row">
    <h2 class="col-md-7">Welke extra kosten moet u structureel extra maken voor deze inhuur? (alleen kosten zoals werkkleding bij normale inhuur en bij reshoring alle kosten)</h2>
    <a id="toevoegenFunctie" class="col-md-offset-4"><i class="fa fa-plus fa-2x  rotate" aria-hidden="true"></i></a>
</div>
<div class="row">
    <div class="col-md-6 ">
        <table class="table table-responsive table-striped functies">
            <tr>
                <th>Type</th>
                <th>Bedrag</th>
            </tr>
           @foreach (var item in Model.Lijst)
                {

                    <tr onclick="location.href = '@(Url.Action("WerkkledijKost","Analyse", new {analyseId = Model.AnalyseId, lijnId = item.LijnId}))'">
                        <td>@item.Type</td>
                        <td>@item.Bedrag</td>

                    </tr>
                }
        </table>
    </div>
    <div id="partial" class="col-md-6">

        <div class="functie">
            <form asp-controller="Analyse" asp-action="WerkkledijKost" method="post" class="form-horizontal">
                <input type="hidden" asp-for="AnalyseId" />
                <input type="hidden" asp-for="LijnId" />
                <div class="row">
                    <label asp-for="Type" class="col-md-4 col-md-offset-2 ww">Type</label>
                    <div class="col-md-4">
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Bedrag" class="col-md-4  col-md-offset-2 control-label ww">Bedrag</label>
                    <div class="col-md-4">
                        <input asp-for="Bedrag" class="form-control"  type="number"/>
                        <span asp-validation-for="Bedrag" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12" id="aanmelden">
                        @*<button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>*@
                        <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>