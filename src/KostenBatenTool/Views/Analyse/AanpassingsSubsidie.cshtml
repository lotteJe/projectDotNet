@model KostenBatenTool.Models.AnalyseViewModels.AanpassingsSubsidieViewModel
@{
    ViewData["Title"] = "2. Tegemoetkoming in de kosten voor aanpassingen werkomgeving/aangepast gereedschap";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h2>Welk bedrag krijgt u aan subsidie voor eventuele aanpassingen aan de werkomgeving?</h2>
<form asp-controller="Analyse" asp-action="AanpassingsSubsidie" method="post" class="form-horizontal">

    <div class="row">
        <label asp-for="Jaarbedrag" class="col-md-2 control-label ww">Jaarbedrag</label>
        <div class="col-md-3">
            <input asp-for="Jaarbedrag" class="form-control" />
            <span asp-validation-for="Jaarbedrag" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10" id="aanmelden">
            <button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>
            <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
        </div>
    </div>
</form>