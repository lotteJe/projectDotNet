@model KostenBatenTool.Models.AnalyseViewModels.TypeBedragViewModel
@{
    ViewData["Title"] = "9. Besparing op outsourcing ";
}

<h1>@ViewData["Title"]</h1>
<hr />


<div class="row">
    <h2 class="col-md-7">Welke zaken worden extern ingekocht en kan op worden bespaard? Denk hierbij aan bijvoorbeeld uitbesteedde productie, schoonmaak, hoveniers enz.</h2>
    <a id="toevoegenFunctie" class="col-md-offset-4"><i class="fa fa-plus fa-2x  rotate" aria-hidden="true"></i></a>
</div>

<div class="row">
    <div class="col-md-6 ">
        <table class="table table-responsive table-striped functies">
            <tr>
                <th>Beschrijving</th>
                <th>Jaarbedrag</th>
            </tr>
            @foreach (var item in Model.Lijst)
        {

            <tr>
                <td>@item.Type</td>
                <td>@item.Bedrag</td>
            </tr>
        }
        </table>
    </div>
    <div id="partial" class="col-md-6">

        <div class="functie">
            <form asp-controller="Analyse" asp-action="OutsourcingBesparing" method="post" class="form-horizontal">
                <div class="row">
                    <label asp-for="Type" class="col-md-4 col-md-offset-2 ww">Beschrijving</label>
                    <div class="col-md-4">
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <label asp-for="Bedrag" class="col-md-4  col-md-offset-2 control-label ww">Jaarbedrag</label>
                    <div class="col-md-4">
                        <input asp-for="Bedrag" class="form-control" />
                        <span asp-validation-for="Bedrag" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12" id="aanmelden">
                        @*<button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>*@
                        <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
