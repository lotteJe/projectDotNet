@model KostenBatenTool.Models.AnalyseViewModels.LogistiekeBesparingViewModel
@{
    ViewData["Title"] = "10. Logistieke besparing";
}
<div class="row">
    <h1 class="col-md-7 col-sm-7 col-xs-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("OutsourcingBesparing", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { analyseId = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("AndereBesparing", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />


<form asp-controller="Analyse" asp-action="LogistiekeBesparing" method="post" class="form-horizontal">
    <input type="hidden" asp-for="AnalyseId" />
    <div class="row">
        <h2>Wat zijn de transportkosten van eventueel uitbesteedde zaken?</h2>
        <label asp-for="Transport" class="col-md-2 col-sm-2 col-xs-12 control-label ww">Jaarbedrag</label>
        <div class="col-md-3 col-sm-3 col-xs-6 ">
            <input asp-for="Transport" class="form-control" type="number" autofocus/>
            <span asp-validation-for="Transport" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <h2>Wat zijn de logistieke handelingskosten van eventueel uitbesteedde zaken?</h2>
        <label asp-for="Logistiek" class="col-md-2 col-xs-12 col-sm-2 control-label ww">Jaarbedrag</label>
        <div class="col-md-3 col-sm-3 col-xs-6">
            <input asp-for="Logistiek" class="form-control" type="number" />
            <span asp-validation-for="Logistiek" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5 col-sm-5 col-xs-6" id="aanmelden">
            <a asp-controller="Analyse" asp-action="Overzicht" asp-route-analyseId="@Model.AnalyseId" class="btn btn-default knop">Annuleren</a>
            <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
        </div>
    </div>
</form>
