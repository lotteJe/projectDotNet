@model KostenBatenTool.Models.AnalyseViewModels.DrieDecimalViewModel
@{
    ViewData["Title"] = "3. Besparing reguliere medewerker op hetzelfde niveau";
}
<div class="row">
    <h1 class="col-md-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("AanpassingsSubsidie", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { id = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("MedewerkerHogerNiveauBesparing", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
    <hr />
    <div class="row">
        <h2 class="col-md-7">Vul hier de lonen op hetzelfde niveau in die mogelijk vervangen worden, met het geschatte aantal uren dat per week weggehaald wordt.</h2>
        <a id="toevoegenFunctie" class="col-md-offset-4"><i class="fa fa-plus fa-2x  rotate" aria-hidden="true"></i></a>
    </div>
    <div class="row">
        <div class="col-md-6 ">
            <table class="table table-responsive table-striped functies">
                <tr>
                    <th>Uren</th>
                    <th>Bruto maandloon fulltime</th>
                    <th>Totale loonkost per jaar</th>
                </tr>
                @foreach (var item in Model.Lijst)
            {

                    <tr>
                        <td>@item.Veld1</td>
                        <td>@item.Veld2</td>
                        <td>@item.Veld3
                    </tr>
                }
            </table>
        </div>
        <div id="partial" class="col-md-6">

            <div class="functie">
                <form asp-controller="Analyse" asp-action="MedewerkerZelfdeNiveauBesparing" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="AnalyseId" />
                    <div class="row">
                        <label asp-for="Veld1" class="col-md-4 col-md-offset-2 ww">Uren</label>
                        <div class="col-md-4">
                            <input asp-for="Veld1" class="form-control" type="number" />
                            <span asp-validation-for="Veld1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <label asp-for="Veld2" class="col-md-4  col-md-offset-2 control-label ww">Bruto maandloon fulltime</label>
                        <div class="col-md-4">
                            <input asp-for="Veld2" class="form-control" type="number" />
                            <span asp-validation-for="Veld2" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <label asp-for="Veld3" class="col-md-4  col-md-offset-2 control-label ww">Totale loonkost per jaar</label>
                        <div class="col-md-4">
                            <input asp-for="Veld3" class="form-control" type="number" />
                            <span asp-validation-for="Veld3" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" id="aanmelden">
                            @*<button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>*@
                            <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
