@model KostenBatenTool.Models.AnalyseViewModels.DrieDecimalViewModel
@{
    ViewData["Title"] = "6. Extra kosten administratie en begeleiding";
    var open = ViewData["open"].Equals(true) ? "in" : "";
    var knop = ViewData["open"].Equals(true) ? "Opslaan" : "Toevoegen";
}
<div class="row">
    <h1 class="col-md-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("OpleidingsKost", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { id = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("AndereKost", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />


<div class="row">
    <h2 class="col-md-7">Hoeveel uren spendeert u jaarlijks aan extra administratie en interne begeleiding?</h2>
    <a id="toevoegenFunctie" class="col-md-offset-4" href="#demo" data-toggle="collapse"><i class="fa fa-plus fa-2x  rotate" aria-hidden="true"></i></a>
</div>

<div class="row">
    <div class="col-md-6 ">
        <table class="table table-responsive table-striped functies">
            <tr>
                <th>Uren</th>
                <th>Bruto maandloon begeleider</th>
                <th>Jaarbedrag</th>
            </tr>
            @foreach (var item in Model.Lijst)
            {

                <tr onclick="location.href = '@(Url.Action("AdministratieBegeleidingsKost","Analyse", new {analyseId = Model.AnalyseId, lijnId = item.LijnId}))'">
                    <td>@item.Veld1</td>
                    <td>@item.Veld2</td>
                    <td>@item.Veld3</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <div class="">
            <div id="demo" class="collapse @open">
                <div class="functie">
                    <form asp-controller="Analyse" asp-action="AdministratieBegeleidingsKost" method="post" class="form-horizontal">
                        <input type="hidden" asp-for="AnalyseId" />
                        <input type="hidden" asp-for="LijnId" />
                        <div class="row">
                            <label asp-for="Veld1" class="col-md-4 col-md-offset-2 ww">Uren</label>
                            <div class="col-md-6">
                                <input asp-for="Veld1" class="form-control" type="number" />
                                <span asp-validation-for="Veld1" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <label asp-for="Veld2" class="col-md-4  col-md-offset-2 control-label ww">Bruto maandloon begeleider</label>
                            <div class="col-md-6">
                                <input asp-for="Veld2" class="form-control" type="number" />
                                <span asp-validation-for="Veld2" class="text-danger"></span>
                            </div>
                        </div><div class="row">
                            <label asp-for="Veld3" class="col-md-4  col-md-offset-2 control-label ww">Jaarbedrag</label>
                            <div class="col-md-6">
                                <input asp-for="Veld3" class="form-control" type="number" />
                                <span asp-validation-for="Veld3" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" id="aanmelden">
                                <a asp-controller="Analyse" asp-action="AdministratieBegeleidingsKost" asp-route-analyseId="@Model.AnalyseId" class="btn btn-default knop">Annuleren</a>
                                <button type="submit" class="btn btn-default knop" id="">@knop</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>