@model KostenBatenTool.Models.AnalyseViewModels.AdministratieBegeleidingsKostViewModel

<div class="functie">
    <form asp-controller="Analyse" asp-action="AdministratieBegeleidingsKost" method="post" class="form-horizontal">

        <div class="row">
            <label asp-for="Uren" class="col-md-2 control-label ww">Uren</label>
            <div class="col-md-3">
                <input asp-for="Uren" class="form-control" />
                <span asp-validation-for="Uren" class="text-danger"></span>
            </div>
            <label asp-for="Maandloon" class="col-md-2 control-label ww">Bruto maandloon begeleider</label>
            <div class="col-md-3">
                <input asp-for="Maandloon" class="form-control" />
                <span asp-validation-for="Maandloon" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <label asp-for="Jaarbedrag" class="col-md-2 control-label ww">Jaarbedrag</label>
            <div class="col-md-3">
                <input asp-for="Jaarbedrag" class="form-control" />
                <span asp-validation-for="Jaarbedrag" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10" id="aanmelden">
                <button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>
                <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
            </div>
        </div>

    </form>
</div>