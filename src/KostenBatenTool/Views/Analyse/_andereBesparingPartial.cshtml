@model KostenBatenTool.Models.AnalyseViewModels.AndereBesparingViewModel

<div class="functie">
    <form asp-controller="Analyse" asp-action="AndereBesparing" method="post" class="form-horizontal">

        <div class="row">
            <label asp-for="Type" class="col-md-2 control-label ww">Type</label>
            <div class="col-md-3">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <label asp-for="Bedrag" class="col-md-2 control-label ww">Jaarbedrag</label>
            <div class="col-md-3">
                <input asp-for="Bedrag" class="form-control" />
                <span asp-validation-for="Bedrag" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10" id="aanmelden">
                <button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>
                <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
            </div>
        </div>

    </form>
</div>