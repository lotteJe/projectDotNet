@model KostenBatenTool.Models.AnalyseViewModels.OmzetverliesBesparingViewModel
@{
    ViewData["Title"] = "6. Inperking omzetverlies";
}
<div class="row">
    <h1 class="col-md-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("UitzendkrachtenBesparing", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { id = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("ProductiviteitsWinst", "Analyse", new { id = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />
<h2>Hoeveel omzet mist u doordat u personeel tekort komt?</h2>
<form asp-controller="Analyse" asp-action="OmzetverliesBesparing" method="post" class="form-horizontal">
    <input type="hidden" asp-for="AnalyseId" />
    <div class="row">
        <label asp-for="Veld1" class="col-md-3 control-label ww">Jaarbedrag omzetverlies</label>
        <div class="col-md-3">
            <input asp-for="Veld1" class="form-control" type="number"/>
            <span asp-validation-for="Veld1" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <label asp-for="Veld2" class="col-md-3 control-label ww">% besparing</label>
        <div class="col-md-3">
            <input asp-for="Veld2" class="form-control" type="number" />
            <span asp-validation-for="Veld2" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <label asp-for="Veld3" class="col-md-3 control-label ww">Totaal</label>
        <div class="col-md-3">
            <input asp-for="Veld3" class="form-control" disabled />
            <span asp-validation-for="Veld3" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6" id="aanmelden">
            <button type="button" class="btn btn-default knop" id="loonkostnochange">Annuleren</button>
            <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
        </div>
    </div>
</form>


