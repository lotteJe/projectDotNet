@model KostenBatenTool.Models.AnalyseViewModels.OmzetverliesBesparingViewModel
@{
    ViewData["Title"] = "6. Inperking omzetverlies";
}
<div class="row">
    <h1 class="col-md-7 col-sm-7 col-xs-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("UitzendkrachtenBesparing", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { analyseId = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("ProductiviteitsWinst", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />
<h2>Hoeveel omzet mist u doordat u personeel tekort komt?</h2>
<div class="col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
    <form asp-controller="Analyse" asp-action="OmzetverliesBesparing" method="post" class="form-horizontal">
        <input type="hidden" asp-for="AnalyseId" />
        <div class="row">
            <label asp-for="Veld1" class="control-label ww">Jaarbedrag omzetverlies</label>
            <div class="">
                <input asp-for="Veld1" class="form-control" type="number" autofocus />
                <span asp-validation-for="Veld1" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="Veld2" class="control-label ww">% besparing</label>
            <div class="">
                <input asp-for="Veld2" class="form-control" type="text" />
                <span asp-validation-for="Veld2" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <label asp-for="Veld3" class="control-label ww">Totaal</label>
            <div class="">
                <input asp-for="Veld3" class="form-control" disabled />
                <span asp-validation-for="Veld3" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="" id="aanmelden">
                <a asp-controller="Analyse" asp-action="Overzicht" asp-route-analyseId="@Model.AnalyseId" class="btn btn-default knop">Annuleren</a>
                <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
            </div>
        </div>

    </form>
</div>

