@model KostenBatenTool.Models.AnalyseViewModels.EenDecimalViewModel
@{
    ViewData["Title"] = "8. Besparing op overuren";
}
<div class="row">
    <h1 class="col-md-7 col-sm-7 col-xs-7">@ViewData["Title"]</h1>
    <div class="volgendeTabs">
        <a href="@Url.Action("ProductiviteitsWinst", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-left" aria-hidden="true"></i> </a>
        <a href="@Url.Action("Overzicht", "Analyse", new { analyseId = Model.AnalyseId })">OVERZICHT</a>
        <a href="@Url.Action("OutsourcingBesparing", "Analyse", new { analyseId = Model.AnalyseId })"> <i class="fa fa-angle-right" aria-hidden="true"></i> </a>
    </div>
</div>
<hr />
<h2>Aan welke kosten kan nog meer worden gedacht?</h2>
<div class="functie">
    <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">
        <form asp-controller="Analyse" asp-action="OverurenBesparing" method="post" class="form-horizontal">
            <input type="hidden" asp-for="AnalyseId" />
            <div class="">
                <label asp-for="Jaarbedrag" class="control-label ww">Jaarbedrag</label>
                <div class="">
                    <input asp-for="Jaarbedrag" class="form-control" type="number" autofocus/>
                    <span asp-validation-for="Jaarbedrag" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="" id="aanmelden">
                    <a asp-controller="Analyse" asp-action="Overzicht" asp-route-analyseId="@Model.AnalyseId" class="btn btn-default knop">Annuleren</a>
                    <button type="submit" class="btn btn-default knop" id="">Toevoegen</button>
                </div>
            </div>
        </form>
    </div>
</div>